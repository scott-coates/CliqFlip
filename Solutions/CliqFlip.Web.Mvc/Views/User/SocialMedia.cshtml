@section styles
{
	<style type="text/css">
		body { background-color: #D1E1E7; }
	</style>
    @*<link href="http://tweet.seaofclouds.com/jquery.tweet.css" type="text/css" rel="Stylesheet" />*@
}
@{
	ViewBag.Title = Model.Username + " - " + Model.Headline;
}
<div class="divider">
</div>
<div class="wrapper">
	<div class="inner">
		<div id="social-media" class="content">
			<!-- Blog Post -->
			<div class="blog-post">
				<div class="post-info">
					<div class="blogdate">
						<div class="month">
							Jun</div>
						<div class="day">
							29</div>
						<div class="year">
							2011</div>
					</div>
					<div class="category">
						<ul>
							@Html.ActionMenuItem("Home", "Index", "User")
							@Html.ActionMenuItem("Social Media", "SocialMedia", "User")
							@Html.ActionMenuItem("Interests", "Interests", "User")
						</ul>
					</div>
					<p class="post_author">
						by Marius Pop
                    </p>
				</div>
                <div id="social-media-container" style="margin-left: 130px;">
                    <div class="social-media">
                        <strong>
                            Facebook
                        </strong>
                        <div id="facebook" class="social-media-content">
                        
                        </div>
					</div>
                    <div class="social-media">
						<strong>
                            Twitter
                        </strong>
                        <div id="twitter" class="social-media-content">
                        </div>
					</div>
                    <div class="social-media">
						<strong>
                            YouTube
                        </strong>
                        <div id="youtube" class="social-media-content">
                        </div>
					</div>
                    <div class="social-media">
                        <strong>
                            Blog Title
                        </strong>
                        <div id="blog" class="social-media-content">
                        </div>
					</div>
                </div>
			</div>
			<!-- END Blog Post -->
		</div>
	</div>
	<div class="clear">
	</div>
</div>
@*section scripts
{
    <script type="text/javascript" src="http://tweet.seaofclouds.com/jquery.tweet.js"></script>
    <script type="text/javascript" src="http://www.zazar.net/developers/jquery/zrssfeed/jquery.zrssfeed.min.js"></script>
    <script type='text/javascript'>
        jQuery(function ($) {
            $("#twitter-feed").tweet({
                username: "craigkerstiens",
                join_text: "auto",
                avatar_size: 32,
                count: 3,
                auto_join_text_default: "we said,",
                auto_join_text_ed: "we",
                auto_join_text_ing: "we were",
                auto_join_text_reply: "we replied to",
                auto_join_text_url: "we were checking out",
                loading_text: "loading tweets..."
            });
        });
        $('#blog').rssfeed('http://feeds.encosia.com/Encosia', {
            limit: 5
        });
</script>
}*@
