@model CliqFlip.Web.Mvc.ViewModels.User.UserProfileViewModel
@{
	ViewBag.Title = "Index";
}
<div class="wrapper">
	<div class="inner">
		<div class="headline" id="profileHeadline" >
			<h2>
				@Model.Headline</h2>
		</div>
		<div>
			<input type="button" value="save" id="saveMindMap" />
		</div>
		<div id="mindMap" style="-webkit-box-shadow: inset 0px 0px 20px #000; background-color: white; height: 300px; margin: 0 auto;">
		</div>
	</div>
</div>
@section scripts
{
	<script type="text/javascript" src="@Url.Content("/Content/js/jquery.json.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/raphael/raphael.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/raphael/graffle.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/raphael/raphael.cliqFlip.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/user/profile.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/cliqFlip/utils.js")"> </script>
	<script type="text/javascript">
		$(function() {
			InitHeadline();
			InitMindMap(@(Html.Raw(Model.InterestsJson)));
			InitMindMapSave(@(Html.Raw(Model.SaveMindMapUrl)), @(Model.Id));
		});
	</script>
}