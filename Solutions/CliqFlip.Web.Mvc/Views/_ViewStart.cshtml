@{
    var userProfilePages = new []{ "index", "socialmedia" };
    var routeValues = this.ViewContext.RouteData.Values;
    
    
    if ("User" == routeValues["controller"].ToString() && userProfilePages.Contains(routeValues["action"].ToString().ToLower()))
    {
        Layout = "~/Views/User/_Profile.cshtml";
    }
    else
    {
       Layout = "~/Views/Shared/_Layout.cshtml";
    }
}