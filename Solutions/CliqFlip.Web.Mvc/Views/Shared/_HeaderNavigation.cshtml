<ul id="header-nav">
    @if (!Request.IsAuthenticated)
    {
        <li>
            @Html.ActionLink("Register Now!", "Create", "User")
        </li>
        <li>
            @Html.ActionLink("Login", "Login", "User", null, new { id = "user-login" })
            <div class="clear">
            </div>
            <div id="user-login-container">
                @Html.Action("Login", "User")
            </div>
        </li>
    }
    else
    {
        <li><strong>Hello @User.Identity.Name</strong> </li>
        <li>
            @Html.ActionLink("Logout", "Logout", "User")
        </li>
    }
</ul>
