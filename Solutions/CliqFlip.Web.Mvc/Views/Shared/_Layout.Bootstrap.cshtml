@model CliqFlip.Web.Mvc.ViewModels.Home.HomeUserViewModel
@{
    Layout = "";
    ViewBag.Title = "CliqFlip - Discover More";
    Bundles.Reference("Content/assets/styles/bootstrap");
    Bundles.Reference("Content/assets/styles/site");
    Bundles.Reference("Content/assets/templates");
    Bundles.Reference("Scripts/modernizr-2.5.3.js", "head");
    Bundles.Reference("Scripts");
    Bundles.Reference("Content/assets/js/marionette");
    Bundles.Reference("Content/assets/js/hogan");
    Bundles.Reference("Content/assets/js/jquery");
    Bundles.Reference("Content/assets/js/cliqflip");
    Bundles.Reference("Content/app");
}
<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Bundles.RenderStylesheets()
    @Bundles.RenderScripts("head")

    <style type="text/css">
        #btn-search
        {
            margin-left: -4px;
        }
        
        body
        {
            background-color: #E7EEF1;
        }
        
        #main-content
        {
            background-color: White;
            padding-top: 65px;
        }
        #toggle-settings-menu {
            display: inline-block;
        }
        
        
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand span1" href="#">CliqFlip</a>
                
                <div class="nav-collapse collapse">
                    <div class="offset2 span7">
                        <div class="input-append">
                            <input class="span4" id="main-search-box" size="16" type="text" >
                            <button id="btn-search" class="btn" type="button">Search</button>
                        </div>
                    </div>
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <img height="35px" class="dropdown-toggle" data-toggle="dropdown" src="@Url.Content("~/Content/assets/img/empty-avatar.jpg")" />
                            <a id="toggle-settings-menu" class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @Model.Username
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#contact">Profile</a></li>
                                <li><a href="#contact">Account</a></li>
                                <li><a href="#contact">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
    @*<div class="subnav subnav-fixed">
    </div>*@
    <div id="main-content" class="container">
        @RenderBody()
    </div>
    <footer style="text-align: center;">
        <p><em>&copy; @DateTime.Now.Year <a href="/">CliqFlip</a> - All rights reserved.</em></p>
    </footer>
    <!-- /container -->
    @Bundles.RenderScripts()
    @Bundles.RenderHtmlTemplates()
    <script type="text/javascript" language="javascript">
        $(function () {
            CliqFlip.Mvc.App.start();
        });
    </script>
</body>
</html>
