@using CliqFlip.Web.Mvc.ViewModels.Home
@model CliqFlip.Web.Mvc.ViewModels.Home.IndexViewModel
@{
	ViewBag.Title = "CliqFlip - Discover More";
}
@section  styles
{
	<link rel="stylesheet" type="text/css" media="all" href="@Url.Content("/Content/styles/autoSuggest.css")" />
}
<!-- SLIDER TRYOUT START-->
<div class="wrapper">
	<div class="inner">
		<div class="tryout">
			<div class="header">
				CliqFlip helps you discover other people with similar interests, social traits, and
				personality.
			</div>
			<div class="subheader">
				Why don't you give it a try?</div>
			<div class="tryout-search">
				<div class="tryout-search-input">
					@using (Html.BeginForm("Index", "Search", FormMethod.Get))
					{
						<div class="search">
							<input type="text" class="search_box" id="interestSearch" />
							<input class="search_submit" value="" type="submit" />
						</div>
					}
				</div>
				<div class="tag-cloud" id="interest-tag-cloud">
					@foreach (IndexViewModel.TagCloudInterestsViewModel tag in Model.TagCloudInterests)
					{
						<a href="javascript:void(0)" value="@tag.Slug" rel="@tag.Weight">@tag.Name</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- SLIDER TRYOUT END-->
<!-- SERVICES BOX START -->
<div class="wrapper">
	<div class="inner">
		<div class="servicebox">
			<div class="icon">
				<img src="@Url.Content("/Content/img/lower-1.png")" alt=""></div>
			<div class="title">
				You</div>
			<div class="text-content">
				Enter in your interest and instantly start browsing other people with similar or
				complimentary interests.</div>
		</div>
		<div class="servicebox">
			<div class="icon">
				<img src="@Url.Content("/Content/img/lower-2.png")" alt=""></div>
			<div class="title">
				Them</div>
			<div class="text-content">
				Register and start building your profile so people can connect with you.
			</div>
		</div>
		<div class="servicebox">
			<div class="icon">
				<img src="@Url.Content("/Content/img/lower-3.png")" alt=""></div>
			<div class="title">
				Connect</div>
			<div class="text-content">
				Build real connections and start networking with people online.
			</div>
		</div>
	</div>
</div>
<!-- SERVICES BOX END -->
<div class="clear"></div>

@section scripts
{
	<script type="text/javascript" src="@Url.Content("/Content/js/jquery.autoSuggest.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/jquery.tagcloud.js")"> </script>
	<script type="text/javascript" src="@Url.Content("/Content/js/home/home.js")"> </script>
	<script type="text/javascript">
		$(function() {
			InitAutoSuggest(@(Html.Raw(Model.KeywordSearchUrl)));

			InitTagCloud();

			ChangeSearchQueryParamName();
		});
	</script>
}