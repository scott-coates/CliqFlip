@model CliqFlip.Web.Mvc.ViewModels.Home.HomeUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.Bootstrap.cshtml";
}

<style type="text/css">
    .gray-rounded-border
    {
        border: 1px solid #DDD;
        -webkit-border-radius: 4px; /* Saf3-4, iOS 1-3.2, Android ≤1.6 */
        border-radius: 4px; /* Opera 10.5, IE9, Saf5, Chrome, FF4+, iOS 4, Android 2.1+ */

        /* useful if you don't want a bg color from leaking outside the border: */
        -moz-background-clip: padding; 
        -webkit-background-clip: padding-box; 
        background-clip: padding-box;
    }
    
    #profile-overview
    {
        padding: 10px;
        margin-bottom: 10px;
    }
    
    #profile-user
    {
        padding-bottom: 15px;
    }
    
    #profile-counts div.span4
    {
        text-align: center;
    }
    
    #user-interest-add-text {
        text-align: left;	
    }

    #user-share-something a
    {
        height: 50px;
        padding-top: 35px;
    }

    .user-interest-add-photo {
	    background-image: url('/Content/assets/img/photoICON.png');
	    background-repeat: no-repeat;
	    
    }

    .user-interest-add-video {
	    background-image: url('/Content/assets/img/YouTube_Icon.png');
	    background-repeat: no-repeat;
    }

    .user-interest-add-link {
	    background-image: url('/Content/assets/img/icons.png');
	    background-repeat: no-repeat;
    }
    
    #content-area
    {
        padding-top: 20px;
    }
    
    
</style>


<div class="row-fluid">
    <div id="left-column" class="span4">
        <div class="row-fluid">
            <div class="span1">
            </div>
            <div class="span11">
            
            <div class="row-fluid">
            <div id="profile-overview" class="span12 gray-rounded-border">
                <div id="profile-user" class="row-fluid">
                    <img id="large-profile-image" src="@Url.Content("~/Content/assets/img/empty-avatar.jpg")" class="span4" />
                    <div class="span8" style="font-size: 20px;line-height: 36px;">
                        <div class="row-fluid">
                            <div class="span12">
                                Jorge Cruz
                            </div>
                            <div class="span12">
                                <button class="btn btn-primary">Edit Profile...</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="profile-counts" class="row-fluid">
                    <div class="span4">
                        <label>0</label>
                        <strong>Friends</strong>
                    </div>
                    <div class="span4">
                        <label>5</label>
                        <strong>Posts</strong>
                    </div>
                    <div class="span4">
                        <label>18</label>
                        <strong>Interests</strong>
                    </div>
                </div>
            </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <ul class="nav nav-pills nav-stacked gray-rounded-border">
                        <li class="active"><a>Your Feed</a></li>
                        <li><a>Search</a></li>
                        <li><a>Inbox</a></li>
                        <li><a>Settings</a></li>
                    </ul>
                </div>
            </div>
            </div>
        </div>
    </div>
    <div class="span8">
        <div class="row-fluid">
            <div class="span8">
                <div class="row-fluid">
                    <strong>Share something:</strong> 
                </div>
                <div class="row-fluid" id="user-share-something">
					<a href="javascript:void(0);" class="span2 user-interest-add-photo">Photo</a>
					<a href="javascript:void(0);" class="span2 user-interest-add-video">Video</a>
					<a href="javascript:void(0);" class="span2 user-interest-add-link">Link</a>
                    <a href="javascript:void(0);" class="span2 user-interest-add-message">Message</a>
				</div>
            </div>
            <div class="span4">
                <div class="row-fluid">
                    <label class="span4">
                    Showing
                    </label>
                    <ul class="span8 nav nav-pills">
                      <li class="active">
                        <a href="#">All Users</a>
                      </li>
                      <li><a href="#">Friends</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div id="content-area" class="span12">
                Masonry Stuff
            </div>
        </div>
    </div>
</div>