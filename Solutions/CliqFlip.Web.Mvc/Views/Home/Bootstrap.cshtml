@model CliqFlip.Web.Mvc.ViewModels.Home.HomeUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.Bootstrap.cshtml";
    ViewBag.Title = "CliqFlip - Discover More";
    Bundles.AddInlineScript("$(function(){CliqFlip.Mvc.App.start();});","inline");
}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
                
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand span1" href="#">CliqFlip</a>
                
            <div class="nav-collapse collapse">
                <div class="offset2 span6">
                    <form class="navbar-search pull-left">
                        <input type="text" class="search-query span4" placeholder="Search">
                    </form>
                </div>
                <ul class="nav pull-right">
                    <li class="dropdown">
                        <img height="35px" class="dropdown-toggle" data-toggle="dropdown" src="@Url.Content("~/Content/assets/img/empty-avatar.jpg")" />
                        <a id="toggle-settings-menu" class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Model.Username
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#contact">Profile</a></li>
                            <li><a href="#contact">Account</a></li>
                            <li><a href="#contact">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>
<div id="main-content" class="container gray-rounded-border">

    <div class="row-fluid" style="padding-top: 10px;">
        <div id="left-column" class="span4">
            <div class="row-fluid">
                <div class="span1">
                </div>
                <div class="span11">
            
                    <div class="row-fluid">
                        <div id="profile-overview" class="span12 gray-rounded-border">
                            <div id="profile-user" class="row-fluid">
                                <img id="large-profile-image" src="@Url.Content("~/Content/assets/img/empty-avatar.jpg")" class="span4" />
                                <div class="span8" style="font-size: 20px; line-height: 36px;">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            Jorge Cruz
                                        </div>
                                        <div class="span12">
                                            <button class="btn btn-primary">Edit Profile...</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="profile-counts" class="row-fluid">
                                <div class="span4">
                                    <label>0</label>
                                    <strong>Friends</strong>
                                </div>
                                <div class="span4">
                                    <label>5</label>
                                    <strong>Posts</strong>
                                </div>
                                <div class="span4">
                                    <label>18</label>
                                    <strong>Interests</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <ul class="nav nav-pills nav-stacked gray-rounded-border">
                                <li class="active"><a>Your Feed</a></li>
                                <li><a>Search</a></li>
                                <li><a>Inbox</a></li>
                                <li><a>Settings</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span8">
            <div class="row-fluid">
                <div class="span8">
                    <div class="row-fluid input-append" id="user-share-something">
                        <label class="add-on span3 share-something">Share something:</label>
                        <a href="javascript:void(0);" class="span2 user-interest-add-photo">Photo</a>
                        <a href="javascript:void(0);" class="span2 user-interest-add-video">Video</a>
                        <a href="javascript:void(0);" class="span2 user-interest-add-link">Link</a>
                        <a href="javascript:void(0);" class="span2 user-interest-add-message">Message</a>
                    </div>
                </div>
                <div class="span4">
                    <div class="row-fluid">
                        <b class="span4 showing-feed">Showing:</b>
                        <ul class="span8 nav nav-pills">
                            <li class="active">
                                <a href="#">All Users</a>
                            </li>
                            <li><a href="#">Friends</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div id="content-area" class="span12">
                    Masonry Stuff
                </div>
            </div>
        </div>
    </div>
</div>