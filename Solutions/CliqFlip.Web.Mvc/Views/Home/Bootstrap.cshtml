@model CliqFlip.Web.Mvc.ViewModels.Home.HomeUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.Bootstrap.cshtml";
    ViewBag.Title = "CliqFlip - Discover More";
    //bootstrap our initial data - http://backbonejs.org/#FAQ-bootstrap
    Bundles.AddInlineScript("$(function(){CliqFlip.App.UserData = " + Json.Encode(Model) + "; CliqFlip.App.Mvc.start();});", "inline");
}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
                
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand span1" href="#">CliqFlip</a>
                
            <div class="nav-collapse collapse">
                <div class="row-fluid">
                    <div style="width:25%;margin:0 auto;">
                        <form class="navbar-search span12">
                        <input type="text" class="search-query span12" placeholder="Search">
                        </form>
                    </div>
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <img height="35px" class="dropdown-toggle" data-toggle="dropdown" src="@Url.Content("~/Content/assets/img/empty-avatar.jpg")" />
                            <a id="toggle-settings-menu" class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @Model.Username
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#contact">Profile</a></li>
                                <li><a href="#contact">Account</a></li>
                                <li><a href="#contact">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="main-content">
</div>