<div class="initial-preview">
    <div class="row-fluid">
        <div class="span3">
            <img src="{{ProfileImageUrl}}" alt="{{Username}}"/>
        </div>
        <div class="span9">
            <div class="row-fluid">
                <div class="span12">
                    <span class="label label-info user-info" rel="popover" data-userid="{{Username}}" data-original-title="A Little About {{Username}}...">
                        {{Username}}
                    </span>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <h6>
                        <small>Posted in {{Interest}}</small>
                    </h6>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <a href="{{PostUrl}}" title="{{Description}}">
                <img class="feed-image" src="{{MediumImage}}" alt="{{Description}}"/>
            </a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 post-description">
            <p>{{Description}}</p>
        </div>
    </div>
    <div class="row-fluid feed-simple-interact">
        <div class="span3">
            <i class="icon-thumbs-up"></i>
            <b>Like</b>
        </div>
        <div class="span3">
        </div>
        <div class="span6">
            <b>
                <a href="{{PostUrl}}" class="comment-count">{{commentCountDescription}}</a>
            </b>
        </div>
    </div>
</div>
<div class="row-fluid activity">
    <div class="span12 well">
        {{#Comments}}
        <div class="row-fluid comment">
            <div class="span12">
                <b>{{Username}}:</b>{{CommentText}}
            </div>
        </div>
        {{/Comments}}
        {{#hasRemainingComments}}
        <div class="row-fluid">
            <div class="span12 see-more-comments">
                <a class="see-more-button" href="{{PostUrl}}" title="See {{commentCountDescription}}">See more comments</a>
            </div>
        </div>
        {{/hasRemainingComments}}
        <div class="span12 see-more-comments add-comment-area">
            <a class="btn btn-mini btn-primary add-comment-button" href="{{PostUrl}}">Add Comment</a>
        </div>
    </div>
</div>