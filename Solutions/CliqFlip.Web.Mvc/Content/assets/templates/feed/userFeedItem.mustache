<div class="initial-preview">
    <div class="row-fluid">
        <div class="span6">
            <a class="select-user-button" href="{{UserPageUrl}}">
                <img src="{{ProfileImageUrl}}" alt="{{Username}}"/>
            </a>
        </div>
        <div class="span6">
            <div class="row-fluid">
                <div class="span12">
                    <span class="label label-info user-info" rel="popover" data-userid="{{Username}}" data-original-title="A Little About {{Username}}...">
                        {{Username}}
                    </span>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <span class="label label-info">
                        {{MajorLocationName}}
                    </span>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <span class="label label-important">
                        12 common interest
                    </span>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <span class="label label-success">
                        12 common interest
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>