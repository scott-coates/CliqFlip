<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Choose a {{MediumType}} from a source:</h3>
</div>
<div class="modal-body">
    <div class="row-fluid">
        <div class="span6">
            <div class="row-fluid">
                <div class="span6">
                    Computer
                </div>
                <div class="span6">
                    <form enctype="multipart/form-data">
                        <input name="file" accept="image/jpg, image/jpeg, image/gif, image/png" type="file"/>
                    </form>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    Facebook
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="input-append">
                        <p>Url:</p>
                        <div  class="add-on">
                            <input type="text" placeholder="Enter Url here"></input>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="row-fluid">
                <div class="span12">
                    <textarea id="medium-description" placeholder="Description"></textarea>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="btn-group">
                        <a class="btn dropdown-toggle btn-mini" data-toggle="dropdown" href="#">
                            <span id="selected-interest-type">Select Interest</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {{#Interests}}
                            <li>
                                <a href="#" data-interest-id="{{Id}}">{{Name}}</a>
                            </li>
                            {{/Interests}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn btn-primary">Add {{MediumType}}</a>
</div>